<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/menuColor1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:background="@color/menuColor1"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/profile_picture" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:background="@color/menuColor1"
        android:id="@+id/person_name"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:textAlignment="center"
            android:text="Member since"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@color/menuColor5"
            android:id="@+id/membersince"
            android:layout_width="0dp"

            android:layout_weight="0.5"
            />

        <TextView
            android:textAlignment="center"
            android:text="Travelled"
            android:background="@color/menuColor4"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:id="@+id/travelled"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:textAlignment="center"
            android:text=""
            android:layout_height="30dp"
            android:gravity="top"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@color/menuColor5"
            android:id="@+id/membersince_date"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            />

        <TextView
            android:text=""
            android:background="@color/menuColor4"
            android:layout_height="30dp"
            android:gravity="top"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:id="@+id/travelled_km"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/aliceBlue">

        <ListView android:id="@+id/profile_data"
            android:layout_height="0dip"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:divider="@color/lightGray"
            android:dividerHeight="2dp"/>

        <Button android:id="@+id/logout_btn"
            android:text="Logout"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>